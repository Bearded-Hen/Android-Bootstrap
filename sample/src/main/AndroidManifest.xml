        >
        <activity
            android:name=".HomeActivity"
            android:label="Android Bootstrap Examples"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".BootstrapButtonExample"
            android:label="BootstrapButton"
            />
        <activity
            android:name=".BootstrapLabelExample"
            android:label="BootstrapLabel"
            />
        <activity
            android:name=".AwesomeTextViewExample"
