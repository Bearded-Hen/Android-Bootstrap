<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Other Buttons" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Just text"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_size="btn_def"
                bootstrapbutton:bb_type="primary" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Two icons"
                bootstrapbutton:bb_icon_left="fa-chevron-circle-right"
                bootstrapbutton:bb_icon_right="fa-chevron-circle-left"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_size="btn_def"
                bootstrapbutton:bb_type="primary" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                bootstrapbutton:bb_icon_left="fa-female"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_size="btn_def"
                bootstrapbutton:bb_type="primary" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                bootstrapbutton:bb_icon_left="fa-certificate"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_size="btn_def"
                bootstrapbutton:bb_type="info" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                bootstrapbutton:bb_icon_left="fa-tachometer"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_size="btn_def"
                bootstrapbutton:bb_type="success" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                bootstrapbutton:bb_icon_left="fa-umbrella"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_size="btn_def"
                bootstrapbutton:bb_type="info" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                bootstrapbutton:bb_icon_left="fa-money"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_size="btn_def"
                bootstrapbutton:bb_type="danger" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                bootstrapbutton:bb_icon_left="fa-desktop"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_size="btn_def"
                bootstrapbutton:bb_type="inverse" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>